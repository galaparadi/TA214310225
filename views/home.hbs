<div class="container">
	<div class="row">
		<div class="col l3" id="workspace-list">
			<h5>Workspace list</h5>
			<div class="divider"></div>
			{{#workspace workspaces}}
			{{> components/collections this.names}}
			{{/workspace}}
		</div>

		<div class="col l9">
			{{!-- dashboard feed item --}}
			<h5>Feed Notifikasi</h5>
			<div class="divider"></div>
			<div id="notif-wrapper">
				{{#if feeds}}
				{{#each feeds}}
				<div class="card-panel">
					<div class="row" style="margin-bottom: 5px">
						<div class="col l9 s9 valign-wrapper">
							<p style="margin-top: 0px"><b><a href="/{{this.workspace}}"
										style="text-transform: uppercase;">{{this.workspace}}</a></b>
								{{this.date}}
							</p>
						</div>
						<div class="col l3 s3">
							<img class="circle responsive-img right"
								src="https://ui-avatars.com/api/?name=galant.paradise">
						</div>
					</div>

					{{!-- dashboard feed text --}}
					<div class="row">
						<div class="col">{{this.message}}</div>
					</div>
				</div>
				{{/each}}
				{{else}}
				<div class="row">
					<div class="col s12 center-align">
						<div class="section">
							<h5>tidak ada notifikasi</h5>
						</div>
					</div>
				</div>
				{{/if}}
			</div>

		</div>

